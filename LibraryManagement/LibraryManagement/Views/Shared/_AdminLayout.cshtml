<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <style>
        /* Header styling */

        header h2 {
            font-size: 1.75rem;
            font-weight: bold;
            margin: 0;
        }

        /* Sidebar styling */
        nav {
            background-color: #585B7A;
            color: #ffffff;
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            height: 100vh;
        }

            nav h5 {
                font-weight: bold;
                font-size: 1.25rem;
                color: #ffffff;
                margin-bottom: 1rem;
            }

        .nav-link {
            color: #ffffff;
            font-weight: 500;
            padding: 0.5rem 1rem;
            transition: color 0.2s, background-color 0.2s;
            border-radius: 0.25rem;
        }
        .nav-link:hover {
            color: #ffffff
        }
      

        /* Content area styling */
        main {
            margin-left: 230px;
            padding: 1rem;
            flex-grow: 1;
        }

        .container-fluid {
            gap: 20px;
        }

        body {
            background-color: #f8f8f9;
        }
    </style>
</head>
<body>

    <!-- Header -->
    <header class="py-3 text-center">
        <h2>Library Management System - Admin Panel</h2>
    </header>

    <div class="container-fluid flex-grow-1 d-flex">
        <!-- Sidebar / Menu -->
        <nav class="p-3" style="width: 230px;">
            <h5>Menu</h5>
            <ul class="nav flex-column">
                <a class="nav-link" asp-controller="Admin" asp-action="Dashboard"><i class="fas fa-chalkboard"></i> Dashboard</a>
                <a class="nav-link" asp-controller="Books" asp-action="Index"><i class="fas fa-book"></i> Books</a>
                <a class="nav-link" asp-controller="Authors" asp-action="Index"><i class="fas fa-user"></i> Authors</a>
                <a class="nav-link" asp-controller="Loans" asp-action="Index"><i class="fas fa-money-check-alt"></i> Loans</a>
                <a class="nav-link" asp-controller="Categories" asp-action="Index"><i class="fas fa-list"></i> Category</a>
                <a class="nav-link" asp-controller="User" asp-action="Index"><i class="fas fa-users"></i> User</a>
            </ul>
        </nav>
    </div>

    <main>
        @RenderBody()
    </main>

</body>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</html>
